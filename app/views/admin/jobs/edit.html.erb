<div class="adminedit">
  <h1> Edit a job </h1>
<%= simple_form_for [:admin, @job] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit" %>

<% end %>
</div>
<style>
.adminedit{
padding-top: 100px;
height: 700px;
padding-left: -200px;
width: 400px;

}
</style>
